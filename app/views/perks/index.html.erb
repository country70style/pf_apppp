<p id="notice"><%= notice %></p>

<h1>Perks</h1>
<%= link_to 'New Perk', new_perk_path, :style=>"color:yellow;" %>
<div class="table-responsive">
<table class="table table-bordered">
  <thead>
    <tr>
      <th>No.</th>
      <th>パーク名</th>
      <th>評価</th>
      <th>備考</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @perks.each do |perk| %>
      <tr>
        <td><%= perk.id %></td>
        <td><%= link_to perk.name, perk, :style=>"color:orange;" %></td>
        <td><%= perk.rate %></td>
        <td><%= perk.context %></td>
        <td><%= link_to 'Edit', edit_perk_path(perk), :style=>"color:lightgreen;" %></td>
        <!--
        <td><%= link_to 'Destroy', perk, method: :delete, data: { confirm: 'Are you sure?' }, :style=>"color:red;" %></td>
        -->
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<%= paginate @perks %>

<%= link_to 'New Post', new_post_path, :style=>"color:red" %>

<br>

<%= render @posts_in_perk %>