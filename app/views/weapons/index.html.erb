<p id="notice"><%= notice %></p>

<h1>Weapons</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Attack</th>
      <th>Fire Rate</th>
      <th>Context</th>
    </tr>
  </thead>

  <tbody>
    <% @weapons.each do |weapon| %>
      <tr>
        <td><%= weapon.name %></td>
        <td><%= weapon.attack %></td>
        <td><%= weapon.fire_rate %></td>
        <td><%= weapon.context %></td>
        <td><%= link_to 'Show', weapon %></td>
        <td><%= link_to 'Edit', edit_weapon_path(weapon) %></td>
        <td><%= link_to 'Destroy', weapon, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Weapon', new_weapon_path, :style=>"color:yellow;" %>
